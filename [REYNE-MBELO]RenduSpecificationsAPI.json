{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "API RESTFul sur ESP32"
  },
  "paths": {
    "/api/luminosityLed": {
      "patch": {
        "summary": "Change l'état de la LED de luminosité",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "state": {
                    "type": "string",
                    "enum": [
                      "on",
                      "off"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "LED de luminosité mise à jour"
          },
          "400": {
            "description": "État invalide ou paramètre manquant"
          }
        }
      }
    },
    "/api/temperatureLed": {
      "patch": {
        "summary": "Change l'état de la LED de température",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "state": {
                    "type": "string",
                    "enum": [
                      "on",
                      "off"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "LED de température mise à jour"
          },
          "400": {
            "description": "État invalide ou paramètre manquant"
          }
        }
      }
    },
    "/api/luminosityLed/status": {
      "get": {
        "summary": "Obtient l'état actuel de la LED de luminosité",
        "responses": {
          "200": {
            "description": "Renvoie l'état actuel de la LED de luminosité"
          }
        }
      }
    },
    "/api/temperatureLed/status": {
      "get": {
        "summary": "Obtient l'état actuel de la LED de température",
        "responses": {
          "200": {
            "description": "Renvoie l'état actuel de la LED de température"
          }
        }
      }
    },
    "/api/luminosity/control": {
      "patch": {
        "summary": "Active ou désactive le contrôle de la luminosité",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "state": {
                    "type": "string",
                    "enum": [
                      "on",
                      "off"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contrôle de la luminosité activé ou désactivé"
          },
          "400": {
            "description": "État invalide ou paramètre 'state' manquant"
          }
        }
      }
    },
    "/api/luminosity": {
      "get": {
        "summary": "Obtient la valeur actuelle de la luminosité",
        "responses": {
          "200": {
            "description": "Renvoie la valeur actuelle de la luminosité"
          }
        }
      }
    },
    "/api/luminosity/threshold": {
      "patch": {
        "summary": "Définit le seuil de luminosité",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Seuil de luminosité réglé"
          },
          "400": {
            "description": "Paramètre 'value' manquant"
          }
        }
      }
    },
    "/api/temperature/control": {
      "patch": {
        "summary": "Active ou désactive le contrôle de la température",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "state": {
                    "type": "string",
                    "enum": [
                      "on",
                      "off"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contrôle de la température activé ou désactivé"
          },
          "400": {
            "description": "État invalide ou paramètre 'state' manquant"
          }
        }
      }
    },
    "/api/temperature": {
      "get": {
        "summary": "Obtient la valeur actuelle de la température",
        "responses": {
          "200": {
            "description": "Renvoie la valeur actuelle de la température"
          }
        }
      }
    },
    "/api/temperature/threshold": {
      "patch": {
        "summary": "Définit le seuil de température",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "value": {
                    "type": "number"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Seuil de température réglé"
          },
          "400": {
            "description": "Paramètre 'value' manquant"
          }
        }
      }
    }
  }
}